{
    "compilerOptions": {
      "declaration": true, // 型定義ファイルを生成
      "emitDeclarationOnly": false, // 型定義ファイルだけを生成（オプション）
      "outDir": "dist", // 出力先ディレクトリ
      "module": "commonjs", // またはプロジェクトに応じたモジュールシステム
      "strict": true, // 厳密な型チェック
      "target": "ES2020", // 出力の JavaScript ターゲット
      "esModuleInterop": true // ESModules と CommonJS の互換性を有効にする
    },
    "include": ["index.ts"] // コンパイル対象のファイル
  }